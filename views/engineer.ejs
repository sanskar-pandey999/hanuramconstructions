<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= engineer.name %> - Hanuram Construction</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/visitingcard.css">
</head>

<body class="bg-gray-900 text-white font-sans">

  <section class="card bg-gray-800 rounded-lg shadow-xl p-6 sm:p-8 max-w-md mx-auto text-center mt-10">
    
    <% if (engineer.profilePictureUrl) { %>
      <img src="<%= engineer.profilePictureUrl %>" alt="<%= engineer.name %>'s Profile Photo"
           class="w-48 h-48 object-cover rounded-full mx-auto mb-4 border-4 border-yellow-500" />
    <% } else { %>
      <img src="https://via.placeholder.com/192x192.png?text=No+Photo" alt="No profile photo available"
           class="w-48 h-48 object-cover rounded-full mx-auto mb-4 border-4 border-yellow-500" />
    <% } %>

    <h3 class="text-2xl font-bold mb-2"><%= engineer.name %></h3>

    <h4 class="text-lg text-gray-300 mb-4">
      <% if (engineer.qualifications?.length > 0) { %>
        <% engineer.qualifications.forEach((q, index) => { %>
          <%= q.degree %> from <%= q.university %><%= (index < engineer.qualifications.length - 1) ? ', ' : '' %>
        <% }); %>
      <% } else { %>
        Not specified
      <% } %>
    </h4>

    <div class="space-y-2 mb-4">
      <p>
        <% if (engineer.contact?.phone) { %>
          <a href="tel:<%= engineer.contact.phone %>" class="text-yellow-400 hover:underline">
            <%= engineer.contact.phone %>
          </a>
        <% } else { %>
          Phone not available
        <% } %>
      </p>
      <p>
        <% if (engineer.contact?.email) { %>
          <a href="mailto:<%= engineer.contact.email %>" class="text-yellow-400 hover:underline">
            <%= engineer.contact.email %>
          </a>
        <% } else { %>
          Email not available
        <% } %>
      </p>
    </div>

    <p class="text-sm text-gray-400 max-h-64 overflow-y-auto">
      <%= engineer.description || "No description available." %>
    </p>
  </section>

  <% if (engineer.founderImages?.length > 0) { %>
    <section class="p-6 sm:p-8">
      <div class="max-w-7xl mx-auto bg-gray-800 rounded-lg shadow-xl p-6">
        <h2 class="text-3xl font-bold text-center mb-6">Founder</h2>
        <div class="flex space-x-4 overflow-x-auto snap-x snap-mandatory">
          <% engineer.founderImages.forEach(img => { %>
            <div class="flex-shrink-0 w-64 h-48 bg-gray-700 rounded-xl overflow-hidden snap-center">
              <img src="<%= img %>" alt="Founder Image"
                   class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                   onerror="this.onerror=null;this.src='https://placehold.co/700x500/334155/e2e8f0?text=Image+Load+Error';" />
            </div>
          <% }); %>
        </div>
      </div>
    </section>
  <% } %>

  <% if (engineer.projectHighlights?.length > 0) { %>
    <section class="p-6 sm:p-8">
      <div class="max-w-7xl mx-auto bg-gray-800 rounded-lg shadow-xl p-6">
        <h2 class="text-3xl font-bold text-center mb-6">Project Highlights</h2>
        <div class="flex space-x-4 overflow-x-auto snap-x snap-mandatory">
          <% engineer.projectHighlights.forEach(img => { %>
            <div class="flex-shrink-0 w-64 h-48 bg-gray-700 rounded-xl overflow-hidden snap-center">
              <img src="<%= img %>" alt="Project Image"
                   class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                   onerror="this.onerror=null;this.src='https://placehold.co/700x500/334155/e2e8f0?text=Image+Load+Error';" />
            </div>
          <% }); %>
        </div>
      </div>
    </section>
  <% } %>

  <% if (engineer.videos?.length > 0) { %>
    <section class="p-6 sm:p-8">
      <div class="max-w-4xl mx-auto bg-gray-800 rounded-lg shadow-xl p-6">
        <h2 class="text-2xl font-bold text-center mb-4 text-white">Videos</h2>
        <div class="flex flex-wrap justify-center gap-4">
          <% engineer.videos.forEach(video => {
            let videoId = null;
            let embedUrl = null;

            if (video.includes("youtube.com/watch?v=")) {
              try {
                const urlParams = new URLSearchParams(new URL(video).search);
                videoId = urlParams.get('v');
              } catch (e) {}
            } else if (video.includes("youtu.be/")) {
              videoId = video.split("youtu.be/")[1]?.split("?")[0];
            }

            if (videoId) {
              embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1&mute=1&loop=1&playlist=${videoId}&controls=1`;
            }

            if (embedUrl) { %>
              <iframe
                width="300"
                height="170"
                src="<%= embedUrl %>"
                title="YouTube video player"
                class="rounded-lg"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
              </iframe>
            <% } else { %>
              <video controls loop muted autoplay width="300" height="170" class="rounded-lg">
                <source src="<%= video %>" type="video/mp4">
                Video cannot be played.
              </video>
            <% }
          }); %>
        </div>
      </div>
    </section>
  <% } %>

  <% if (engineer.servicesOffered?.length > 0) { %>
    <section class="p-6 sm:p-8">
      <div class="max-w-4xl mx-auto bg-gray-800 rounded-lg shadow-xl p-6">
        <h2 class="text-2xl font-bold text-center mb-6 text-gray-100">Services Offered</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-700 bg-gray-900 rounded-lg">
            <thead class="bg-gray-700">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Service</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Price</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Time Required</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
              <% engineer.servicesOffered.forEach(service => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-100">
                    <%= service.service %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                    ₹<%= service.price %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                    <%= service.timeRequired %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  <% } %>

  <footer class="text-center text-gray-400 py-6">
    © 2025 Hanuram Construction. All rights reserved.
  </footer>

</body>
</html>
